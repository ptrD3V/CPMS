@{
    ViewData["Title"] = "Task detail";
    var IsManager = User.FindFirst(ClaimTypes.Role)?.Value == "Manager";
    var IsDeveloper = User.FindFirst(ClaimTypes.Role)?.Value == "Developer";
}
@using System.Security.Claims
@model TaskModel

<div class="container-fluid">
    <div class="row main-header">
        <h2>
            @ViewData["Title"]
        </h2>
    </div>
    <div class="body-content">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-default" asp-action="Index"><<< Back</a>
                </div>
                <div class="col-md-2">
                    <a class="btn btn-default" asp-action="LogTime" asp-route-id="@Model.ID">Log time</a>
                </div>
                @if (IsManager)
                {
                    <div class="col-md-2">
                        <a class="btn btn-default" asp-action="CloseTask" asp-route-id="@Model.ID">Close Task</a>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="container card">
                        <div class="row">
                            <h4>
                                General Info
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Task Name :
                            </div>
                            <div class="col-md-2">
                                @Model.Name
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                Project :
                            </div>
                            <div class="col-md-2">
                                @if (@ViewData["Project"] != null)
                                {
                                    @ViewData["Project"]
                                }
                                else
                                {
                                    <div>---</div>
                                }
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                Type :
                            </div>
                            <div class="col-md-2">
                                @Model.Type.ToString()
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                Points :
                            </div>
                            <div class="col-md-2">
                                @Model.Point.ToString()
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Start Date :
                            </div>
                            <div class="col-md-2">
                                @Model.StarDate
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                End Date :
                            </div>
                            <div class="col-md-2">
                                @if (@Model.CloseDate != null)
                                {
                                    @Model.CloseDate
                                }
                                else
                                {
                                    <span>---</span>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Time total :
                            </div>
                            <div class="col-md-2 alert-success">
                                @ViewData["TotalTime"]
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Description :
                            </div>
                            <div class="col-md-2">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">

                </div>
            </div>
            <div class="row">
                <div class="container card">
                    <h4>Logged times</h4>
                    <div class="row" style="padding: 10px; background: #222; color:#ffffff">
                        <div class="col-sm-10">
                            Date
                        </div>
                        <div class="col-sm-10">
                            Who
                        </div>
                        <div class="col-sm-10">
                            Start time
                        </div>
                        <div class="col-sm-10">
                            End time
                        </div>
                        <div class="col-sm-10">
                            Description
                        </div>
                        <div class="col-sm-10">
                            Total time
                        </div>
                        <div class="col-sm-10">
                            Actions
                        </div>
                    </div>
                    @if (@ViewData["Times"] != null)
                    {
                        @foreach (var item in @ViewData["Times"] as List<TimeModel>)
                        {
                            <div class="row" style="border: 1px solid #aaa; padding: 10px; background: #eee;">
                                <div class="col-sm-10">
                                    @item.Start.Date
                                </div>
                                <div class="col-sm-10">
                                    @item.Developer.FullName
                                </div>
                                <div class="col-sm-10">
                                    @item.Start.TimeOfDay
                                </div>
                                <div class="col-sm-10">
                                    @item.Close.Value.TimeOfDay
                                </div>
                                <div class="col-sm-10">
                                    @item.Description
                                </div>
                                <div class="col-sm-10">
                                    @item.TotalTime
                                </div>
                                <div class="col-sm-10">
                                    <a asp-area="" asp-controller="Task" asp-action="EditTime" asp-route-id="@item.ID">Update</a>
                                    <a style="margin-left: 10px; background: red; padding: 3px 5px; border-radius: 5px; color: #fff;" asp-area="" asp-controller="Task" asp-action="RemoveTime" asp-route-id="@item.ID">x</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="alert-warning">No logged times</div>
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="container card">
                    <h4>Comments</h4>
                    @if (@Model.Comments.Count != 0)
                    {
                    }
                    else
                    {
                        <div class="row">
                            <div class="alert-warning">No comments</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

