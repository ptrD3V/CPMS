@{
    ViewData["Title"] = "Developer detail";
}
@using CPMS.DAL.Common
@model DeveloperModel
    
<div class="container-fluid">
    <div class="row main-header">
        <h2>
            @ViewData["Title"]
        </h2>
    </div>
    <div class="body-content">
        <div class="container">
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <div class="container card">
                        <div class="row">
                            <h4>
                                Personal Info
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                First Name :
                            </div>
                            <div class="col-md-2">
                                @Model.FirstName
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Last Name :
                            </div>
                            <div class="col-md-2">
                                @Model.LastName
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                User Name :
                            </div>
                            <div class="col-md-2">
                                @Model.UserName
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Role :
                            </div>
                            <div class="col-md-2">
                                @Model.Role.ToString()
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>


