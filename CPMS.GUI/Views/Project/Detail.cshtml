@{
    ViewData["Title"] = "Project detail";
    var IsManager = User.FindFirst(ClaimTypes.Role)?.Value == "Manager";
    var IsDeveloper = User.FindFirst(ClaimTypes.Role)?.Value == "Developer";
}
@using System.Security.Claims
@model ProjectModel

<div class="container-fluid">
    <div class="row main-header">
        <h2>
            @ViewData["Title"]
        </h2>
    </div>
    <div class="body-content">
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    <a class="btn btn-default" asp-action="Index"><<< Back</a>
                </div>
                @if (IsManager)
                {
                    <div class="col-md-2">
                        <a class="btn btn-default" asp-action="Close" asp-route-id="@Model.ID">Close project</a>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="container card">
                        <div class="row">
                            <h4>
                                General Info
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Project Name :
                            </div>
                            <div class="col-md-2">
                                @Model.Name
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                Start Date :
                            </div>
                            <div class="col-md-2">
                                @Model.StarDate
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                End Date :
                            </div>
                            <div class="col-md-2">
                                @if (@Model.EndDate != null)
                                {
                                    @Model.EndDate
                                }
                                else
                                {
                                    <span>---</span>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Customer :
                            </div>
                            <div class="col-md-2">
                                @if (@Model.Customer != null)
                                {
                                    @if (@Model.Customer.BillingInfo != null)
                                    {
                                        @Model.Customer.BillingInfo.CompanyName
                                    }
                                    else
                                    {
                                        @Model.Customer.FullName
                                    }
                                }
                                else
                                {
                                    <span>---</span>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Description :
                            </div>
                            <div class="col-md-2">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="container card">
                        <div class="row">
                            <h4>
                                Other Info
                            </h4>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Number of tasks total :
                            </div>
                            <div class="col-md-2">
                                @ViewData["TasksCount"]
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Logged time total :
                            </div>
                            <div class="col-md-2">
                                @ViewData["TimeCount"]
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Number of tasks this month :
                            </div>
                            <div class="col-md-2">
                                @ViewData["TasksCountMonth"]
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                Logged time this month :
                            </div>
                            <div class="col-md-2">
                                @ViewData["TimeCountMonth"]
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="container card">
                    <h4>Tasks</h4>
                    <div class="row" style="padding: 10px; background: #222; color:#ffffff">
                        <div class="col-sm-6">
                            Name
                        </div>
                        <div class="col-sm-6">
                            Points
                        </div>
                        <div class="col-sm-6">
                            Type
                        </div>
                        <div class="col-sm-6">
                            Status
                        </div>
                        <div class="col-sm-6">
                            Actions
                        </div>
                    </div>
                    @if (@ViewData["Tasks"] != null)
                    {
                        @foreach (var item in @ViewData["Tasks"] as List<TaskModel>)
                        {
                            <div class="row tasklist" style="border: 1px solid #aaa; padding: 10px; background: #eee;">
                                <div class="col-sm-6">
                                    @item.Name
                                </div>
                                <div class="col-sm-6">
                                    @item.Point.ToString()
                                </div>
                                <div class="col-sm-6">
                                    @item.Type
                                </div>
                                <div class="col-sm-6">
                                    @if (@item.CloseDate != null)
                                    {
                                        <span class="alert-success">Done</span>
                                    }
                                    else
                                    {
                                        <span class="alert-warning">Pending</span>
                                    }
                                </div>
                                <div class="col-sm-6">
                                    <a asp-area="" asp-controller="Task" asp-action="Detail" asp-route-id="@item.ID">Detail</a>
                                    <a asp-area="" asp-controller="Task" asp-action="Edit" asp-route-id="@item.ID">Update</a>
                                    <a style="margin-left: 10px; background: red; padding: 3px 5px; border-radius: 5px; color: #fff;" asp-area="" asp-controller="Task" asp-action="Remove" asp-route-id="@item.ID">x</a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="row">
                            <div class="alert-warning">No tasks</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

